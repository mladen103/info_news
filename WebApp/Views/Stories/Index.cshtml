@model Application.Responses.PagedResponse<Application.DataTransferObjects.StoryDto>

@{
    ViewData["Title"] = "Index";
}

<style>
    .row {
        display: flex; /* equal height of the children */
    }

    .col {
        flex: 1; /* additionally, equal width */
        padding: 1em;
        border: solid;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model.Data)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img width="100px" height="200px" src="/uploads/@Html.DisplayFor(modelItem => item.Picture.Path)" alt="@Html.DisplayFor(modelItem => item.Picture.Name)" style="width:100%">
                <div class="caption">
                    <h3>Name: @Html.DisplayFor(modelItem => item.Name)</h3>
                    <p>Active: @Html.DisplayFor(modelItem => item.IsActive)</p>
                    <hr />
                    <p>
                        Journalists:

                        @foreach (var journalist in item.Journalists)
                        {
                            @journalist.LastName <text> </text> @journalist.FirstName @:|
                        }


                    </p>

                    <hr />
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <form method="post" asp-action="delete" asp-route-id="@item.Id">
                        <input type="submit" value="Delete" />
                    </form>
                    <hr />

                </div>
            </div>
        </div>
    }
</div>
